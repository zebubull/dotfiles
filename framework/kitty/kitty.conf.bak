# vim:fileencoding=utf-8:foldmethod=marker

# font settings
font_family DejaVuSansM Nerd Font Mono
font_size 12.0

# misc settings
show_hyperlink_targets true
background_opacity 0.8

# tab bar config
tab_bar_edge top
tab_bar_align left
tab_bar_min_tabs 2
tab_bar_style fade
tab_activity_symbol +
tab_title_template {fmt.fg.red}{bell_symbol}{activity_symbol}{fmt.fg.tab}{title} {num_windows}

include theme.conf

# keybinds
kitty_mod ctrl+shift

map kitty_mod+t new_tab
map ctrl+tab next_tab
map ctrl+shift+tab previous_tab
map kitty_mod+q close_tab

map kitty_mod+< move_tab_backward
map kitty_mod+> move_tab_forward
map kitty_mod+i set_tab_title

map kitty_mod+h launch --cwd=current --location=hsplit
map kitty_mod+v launch --cwd=current --location=vsplit
map kitty_mod+w close_window

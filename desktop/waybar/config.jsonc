{
  "spacing": 16,
  "height": 38,
  "modules-left": [
    "hyprland/workspaces",
    "tray",
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "group/music",
    "clock"
  ],
  "hyprland/window": {
    "separate-outputs": true,
    "max-length": 50
  },
  "tray": {
    "show-passive-items": true,
    "icon-size": 24,
    "spacing": 8,
  },
  "disk": {
    "format": " {percentage_used}%",
    "path": "/home"
  },
  "memory": {
    "format": "  {used}GiB"
  },
  "cpu": {
    "format": "󰍛 {}%"
  },
  "mpd": {
    "format": "{stateIcon} {elapsedTime:%M:%S}/{totalTime:%M:%S} ｜ {title} by {artist}",
    "artist-len": 20,
    "max-length": 50,
    "on-click": "mpc toggle",
    "on-scroll-up": "mpc next",
    "on-scroll-down": "mpc prev",
    "state-icons": {
        "paused": " ",
        "playing": ""
    }
  },
  "group/music": {
    "orientation": "inherit",
    "modules": [
      "wireplumber",
      "mpd"
    ],
    "drawer": {},
  },
  "wireplumber": {
      "format": "{volume}% {icon}",
      "format-muted": "X ",
      "on-click": "qpwgraph",
      "format-icons": ["", "", ""]
  },
  "network": {
    "format": "{ipaddr}/{cidr}"
  },
}
